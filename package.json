{
  "name": "diceware-generator",
  "version": "3.0.1",
  "description": "A diceware generator",
  "main": "lib",
  "scripts": {
    "pretest": "eslint .",
    "test": "istanbul cover _mocha",
    "coveralls": "coveralls < coverage/lcov.info",
    "codeclimate": "codeclimate-test-reporter < coverage/lcov.info",
    "build": "babel src -d lib -s",
    "prepublish": "npm run build -S",
    "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version major && git push origin && git push origin --tags && npm publish",
    "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version minor && git push origin && git push origin --tags && npm publish",
    "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version patch && git push origin && git push origin --tags && npm publish"
  },
  "engines": {
    "node": ">=4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lgaticaq/diceware-generator.git"
  },
  "keywords": [
    "diceware",
    "password",
    "generator"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lgaticaq/diceware-generator/issues"
  },
  "homepage": "https://github.com/lgaticaq/diceware-generator#readme",
  "dependencies": {
    "secure-random": "^1.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-plugin-transform-es2015-modules-umd": "^6.12.0",
    "babel-preset-es2015": "^6.14.0",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.4.0",
    "coveralls": "^2.11.12",
    "diceware-wordlist-en-eff": "^1.0.0",
    "eslint": "^3.9.1",
    "generate-changelog": "^1.0.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        2,
        2
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "quotes": [
        2,
        "single"
      ],
      "semi": [
        2,
        "always"
      ]
    }
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-umd"
    ],
    "presets": [
      "es2015"
    ]
  },
  "tonicExampleFilename": "example.js"
}
